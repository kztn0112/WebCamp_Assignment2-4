<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>フォロー数:</th>
    <th><%= link_to user_followings_path(user) do %>
        <%= user.followings.count %><% end %></th>
  </tr>
  <tr>
    <th>フォロワー数:</th>
    <th><%= link_to user_followers_path(user) do %><%= user.followers.count %><% end %></th>
  </tr>
</table>

<div class='row'>
   <% if current_user == user %>
   <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
  <% elsif current_user.following?(user) %>
  <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete ,class: "btn btn-sm btn-success"%>
  <% else %>
  <%= link_to "Follow", user_relationships_path(user.id), method: :post ,class: "btn btn-sm btn-success" %>
  <% end %>

</div>